<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/m_primary</item>
        <item name="colorPrimaryDark">@color/m_primary_dark</item>
        <item name="colorAccent">@color/m_accent</item>
        <item name="android:dialogTheme">@style/CustomDialog</item>
    </style>


    <style name="mySpinnerStyle" parent="android:Widget.ListView.DropDown">
        <item name="android:divider">@color/m_primary</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="CustomDialog" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">false</item>
        <item name="background">@color/m_background</item>
    </style>


