<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginBottom="1.2sp"
    android:layout_marginTop="1.2sp"
    android:layout_marginRight="2.4sp"
    android:layout_marginLeft="2.4sp"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:backgroundTint="@color/m_black"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardBackgroundColor="@color/m_white"
        card_view:cardCornerRadius="1dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        card_view:cardElevation="2dp"
        android:layout_marginBottom="0dp">
        <LinearLayout
            android:orientation="vertical"
            android:weightSum="6"
            android:paddingTop="6dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:weightSum="5"
                android:orientation="horizontal"
                android:layout_weight="4"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <TextView
                    android:fontFamily="sans-serif"
                    android:id="@+id/tvTeam1"
                    android:textColor="#313131"
                    android:gravity="left|center"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:text="Azerbaijan"
                    android:textSize="14sp"
                    android:layout_height="match_parent" />
                <TextView
                    android:textColor="#313131"
                    android:id="@+id/tvScore"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:textSize="20sp"
                    android:text=""
                    android:layout_height="match_parent" />
                <TextView
                    android:fontFamily="sans-serif"
                    android:textColor="#313131"
                    android:id="@+id/tvTeam2"
                    android:gravity="right|center"
                    android:layout_weight="2"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_width="0dp"
                    android:textSize="14sp"
                    android:text="Russia"
                    android:layout_height="match_parent" />

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="2"
                android:paddingBottom="1dp"
                android:paddingTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <ImageView
                    android:background="@color/m_item_separator"
                    android:layout_width="match_parent"

                    android:layout_height="1px" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:fontFamily="sans-serif"
                        android:id="@+id/tvPred"
                        android:layout_centerInParent="true"
                        android:text="Pred"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:textColor="@color/m_pred_blue"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                    <TextView
                        android:fontFamily="sans-serif"
                        android:layout_alignParentRight="true"
                        android:id="@+id/tvDate"
                        android:textColor="#5c5c5c"
                        android:text="28 noyabr 2015"
                        android:layout_width="wrap_content"
                        android:textSize="10sp"
                        android:gravity="center|right"
                        android:layout_height="match_parent" />
                    <TextView
                        android:fontFamily="sans-serif"
                        android:layout_alignParentLeft="true"
                        android:id="@+id/tvTime"
                        android:text="23:45"
                        android:textColor="#5c5c5c"
                        android:textSize="10sp"
                        android:gravity="center|left"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />

                    <TextView
                        android:fontFamily="sans-serif"
                        android:id="@+id/tvH2H"
                        android:layout_toRightOf="@id/tvPred"
                        android:text="H2H"
                        android:textColor="@color/m_h2h"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:layout_width="40dp"
                        android:layout_height="match_parent" />
                    <TextView
                        android:id="@+id/tvMinute"
                        android:textColor="@color/m_match_time"
                        android:layout_toLeftOf="@id/tvPred"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:layout_width="40dp"
                        android:layout_height="match_parent" />
                    <RelativeLayout
                        android:layout_toRightOf="@id/tvH2H"
                        android:layout_width="wrap_content"
                        android:gravity="center|left"
                        android:layout_height="match_parent">

                        <TextView
                            android:visibility="gone"
                            android:fontFamily="sans-serif"
                            android:layout_alignParentLeft="true"
                            android:id="@+id/tvRed2"
                            android:background="@drawable/shape_red_car"
                            android:textColor="@color/m_white"
                            android:textSize="8sp"
                            android:gravity="center"
                            android:layout_width="10dp"
                            android:layout_height="10dp" />
                        <TextView
                            android:visibility="gone"
                            android:fontFamily="sans-serif"
                            android:id="@+id/tvYellow2"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@id/tvRed2"
                            android:textColor="@color/m_white"
                            android:textSize="8sp"
                            android:gravity="center"
                            android:background="@drawable/shape_yellow_car"
                            android:layout_width="10dp"
                            android:layout_height="10dp" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_toLeftOf="@id/tvMinute"
                        android:layout_width="50dp"
                        android:gravity="center|right"
                        android:layout_height="match_parent">

                        <TextView
                            android:visibility="gone"
                            android:fontFamily="sans-serif"
                            android:id="@+id/tvRed1"
                            android:background="@drawable/shape_red_car"
                            android:textColor="@color/m_white"
                            android:textSize="8sp"
                            android:gravity="center"
                            android:layout_width="10dp"
                            android:layout_height="10dp" />
                        <TextView
                            android:visibility="gone"
                            android:fontFamily="sans-serif"
                            android:id="@+id/tvYellow1"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/m_white"
                            android:textSize="8sp"
                            android:gravity="center"
                            android:background="@drawable/shape_yellow_car"
                            android:layout_width="10dp"
                            android:layout_height="10dp" />

                    </LinearLayout>
                </RelativeLayout>



            </LinearLayout>
        </LinearLayout>


        </android.support.v7.widget.CardView>




</LinearLayout>