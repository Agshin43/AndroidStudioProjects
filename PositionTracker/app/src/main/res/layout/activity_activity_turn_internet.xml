<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.apps.idrak.positiontracker.ActivityTurnGps">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/internet_is_off"
        android:id="@+id/textView"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:onClick="btnWirelessOnClicked"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/turn_on_wireless"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:onClick="btnWifiOnClicked"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/turn_on_wifi"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
    <Button
        android:onClick="btnMobileDataOnClicked"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/turn_on_mobile_data"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
</LinearLayout>
